---
import Giscus from "../components/Giscus.astro";
import Layout from "./Layout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <main class="max-w-3xl w-full px-4 mx-auto mb-12">
    <article class="mb-16"><slot /></article>
    <hr />
    <section class="mt-16">
      <Giscus />
    </section>
  </main>
</Layout>
