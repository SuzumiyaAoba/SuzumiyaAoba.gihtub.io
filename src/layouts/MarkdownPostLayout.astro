---
import { string } from "astro/zod";
import Layout from "./Layout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <main class="max-w-3xl px-4 mx-auto mb-12">
    <article class="mb-16"><slot /></article>
    <hr />
    <section class="mt-16">
      <script
        src="https://giscus.app/client.js"
        data-repo="SuzumiyaAoba/SuzumiyaAoba.github.io"
        data-repo-id="R_kgDOKadgRw"
        data-category="Announcements"
        data-category-id="DIC_kwDOKadgR84CZxHy"
        data-mapping="pathname"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="top"
        data-theme="light"
        data-lang="ja"
        data-loading="lazy"
        crossorigin="anonymous"
        async></script>
    </section>
  </main>
</Layout>

